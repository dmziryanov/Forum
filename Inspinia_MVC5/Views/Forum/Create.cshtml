@model DAL.BlogModel


<div class="main-container">
    <div class="container">
        <div class="row">
            <div class="col-md-9 page-content">
                <div class="inner-box category-content">
                    <h3 class="icon-color-5">Форумы оптимизированы под мобильные устройства.</h3>
                </div>
            </div>
        </div>
    </div>
</div>



<img src="/Images/slurp.jpg" />

<div id="wrapper">
    <div class="main-container">
        <div class="container">
            <div class="row">
                <div class="col-md-9 page-content">
                    <div class="inner-box category-content">
                        <h2 class="title-2 uppercase">
                            <strong> <i class="icon-docs"></i>Создание раздела на форуме</strong>
                        </h2>

                        <div class="row">
                            <div class="col-sm-12">
                                @using (@Html.BeginForm(Html.BeginForm("PostBlog", "Forum", FormMethod.Post, new { @class = "form-horizontal", @enctype = "multipart/form-data" })))
                                {
                                    @Html.AntiForgeryToken()
                                    @Html.ValidationSummary(true)

                                    <fieldset>
                                        @if (Request.IsAuthenticated)
                                        {

                                            <div class="form-group">
                                                <label class="col-md-3 control-label" for="Adtitle">Название</label>
                                                <div class="col-md-8">
                                                    <input id="Name" name="Name" placeholder="Заголовок" class="form-control input-md" required="" type="text">
                                                    <span class="help-block">Назовите</span>
                                                </div>
                                            </div>

                                            <!-- Textarea -->
                                            <div class="form-group">
                                                <label class="col-md-3 control-label" for="textarea">Описание </label>
                                                <div class="col-md-8">
                                                    <textarea class="form-control" id="Description" name="Description">Введите описание</textarea>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-md-3 control-label">Категория</label>
                                                <div class="col-md-8">
                                                    <select id="CategoryId" name="CategoryId" class="form-control">
                                                        <option value="0" selected="selected" disabled="disabled">Выберите... </option>
                                                        @foreach (var item in Model._categories)
                                                        {
                                                            <option value="@item.ID" style="background-color: #E9E9E9; font-weight: bold;"> - @item.Name - </option>
                                                        }
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-md-3 control-label" for="textarea"> Изображения </label>
                                                <div class="col-md-8">
                                                    <div class="mb10">
                                                        <input id="somename" name="somename" type="file" class="file" data-preview-file-type="text">
                                                    </div>
                                                    <p class="help-block">Добавьте 1 главную фотографию шапки, рекомендуемый формат 1400 х 800, размер не более 100Кб.</p>
                                                </div>
                                            </div>
                                             <!-- Button -->
                                            <div class="form-group">
                                                <label class="col-md-3 control-label"></label>


                                                <div class="col-md-8">
                                                    <input class="btn btn-primary btn-lg" type="submit" value="Опубликовать" />
                                                </div>
                                            </div>
                                        }
                                        else
                                        {
                                            <text>
                                                <h3>
                                                    Вы не авторизованы @Html.ActionLink("Войдите", "LogOn", "Account") или @Html.ActionLink("Зарегистрируйтесь", "Register", "Account") если у вас нет логина.
                                                </h3>
                                            </text>
                                        }
                                    </fieldset>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



