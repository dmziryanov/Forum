@{
    ViewBag.Title = "Contact";
}


@model BootStrap.Models.ContactModel
<script src="http://api-maps.yandex.ru/1.1/?wizard=constructor" type="text/javascript"></script>
<script>
    YMaps.jQuery(function() {
        var map = new YMaps.Map(YMaps.jQuery("#YMapsID-5758")[0]);

        map.addControl(new YMaps.Zoom());

        YMaps.Styles.add("constructor#pmdblPlacemark666", {
            iconStyle: {
                href: "http://www.rmsauto.ru/images/aprc_logo.png",
                size: new YMaps.Point(36, 41),
                offset: new YMaps.Point(-13, -40)
            }
        });
        var s = new YMaps.Style();

        // Создает стиль значка метки
        
        s.iconStyle = new YMaps.IconStyle();

        s.iconStyle.href = "/images/marker.png";
        
        placemark = new YMaps.Placemark(new YMaps.GeoPoint(55.1047, 51.7620), {style : s});
        

        map.addOverlay(placemark);

        
        map.setCenter(new YMaps.GeoPoint(55.0047, 51.4620), 4, YMaps.MapType.MAP);
        });

</script>

<div class="intro-inner">
    <div class="contact-intro">
        <div id="YMapsID-5758" style="width:100%;height:350px;float:left;"></div>
        
    </div>
    <!--/.contact-intro || map end-->

</div>
<!-- /.intro-inner -->

