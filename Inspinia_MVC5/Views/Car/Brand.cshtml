@model IEnumerable<DAL.KeyNamePair>
@{
    Layout = null;
}

  <!-- Select Basic -->
<div class="form-group">
    <label class="col-md-3 control-label">Бренд</label>
    <div class="col-md-8">
        <select onchange="LoadModels(this.value);" id="Brand" name="Brand" class="form-control">
            <option value="0" selected="selected" disabled="disabled">Выберите... </option>
            @foreach (var item in @Model)
            {
                <option value="@item.Id" style="background-color: #E9E9E9; font-weight: bold;"> @item.Name </option>
            }
        </select>
    </div>
</div>